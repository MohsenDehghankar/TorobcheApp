<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharifdev.torobche">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Chat.ChatActivity"/>
        <activity android:name=".Activity.QuizActivity" />
        <activity android:name=".Activity.QuestionMakeActivity" />
        <activity android:name=".Activity.HistoryActivity" />
        <activity android:name=".Category.CategoryPage" />
        <activity
            android:name=".MainActivity"
            android:noHistory="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home" />
        <activity android:name=".Category.SelectCategoryActivity" />
        <activity android:name=".SignUpActivity" android:noHistory="true"/>
    </application>

</manifest>